solvers
{
    fi
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-10;
        relTol          0.5;
    }
    
    fiFinal
    {
        $fi;
        tolerance       1e-12;
        relTol          0;
    }
    
    "cellMotionU.*"
    {
    
	solver          GAMG;
        tolerance       1e-10;
        relTol          0;
        smoother        GaussSeidel;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator    faceAreaPair;
        mergeLevels     1;
        minIter         1;
        maxIter         100;   
    }
}

